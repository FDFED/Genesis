<head>
    <link rel="stylesheet" href="/css/transport-form.css">
</head>

<%- include('navbar.ejs')%>
<!--<img class="car" src="/images/life-insurance.png">-->
<form class="form" action="/life-form" method="post" enctype="multipart/form-data">
    <div class="row1"><p class="label">Name</p> <input  name="firstName" type="text" class="row13" placeholder="First name">
        <input name="lastName" type="text" class="row13" placeholder="Last name"></div>

    <div class="row1">
        <p class="label">Sex</p> <input name="sex" class="inner-row1" placeholder="Sex">
    </div>
    <div class="row2">
        <div class="subrow"><p class="label">AADHAR</p> <input type="file" class="inner-row2" name="aadhar"></div>
        <div class="subrow"><p class="label">PAN</p> <input type="file" class="inner-row2" name="pan"></div>
    </div>
    <div class="row2">
        <div class="subrow"><p class="label">DOB Proof</p><input  name="dobProof" type="file" class="inner-row2"></div>
        <div class="subrow"><p class="label">Health Certificate</p><input type="file" name="healthCertificate" class="inner-row2"></div>

    </div>

    <div class="row1">
        <input class="health_" name="healthCondition" placeholder="Any health defects you have suffered previously or are suffering currently">
    </div>

    <div class="row1">
        <p class="label">Beneficiary Name</p>
        <input name="nominee" class="inner-row1">

    </div>

    <div class="row2">
        <div class="subrow">
            <p class="label">Beneficiary Age</p>
            <input class="inner-row2" name="nomineeAge">
        </div>
        <div class="subrow">
            <p class="label">Beneficiary Relation</p>
            <input class="inner-row2" name="nomineeRelation">
        </div>
    </div>
    <div class="row2">
        <div class="subrow"><p class="label">Beneficiary AADHAR</p> <input type="file" class="inner-row2" name="nomineeAadhar"></div>
        <div class="subrow"><p class="label">Beneficiary AddressProof</p> <input type="file" class="inner-row2" name="nomineeAddressProof"></div>
    </div>


    <div class="row1">
        <p class="label">Policy Id</p>
        <input class="inner-row1" name="policyId" value="<%=r._id%>">
    </div>
    <div class="row1">
        <p class="label">Policy Name</p>
        <input class="inner-row1" name="policyName" value="<%=r.name%>">
    </div>


    <div class="row2">
        <div class="subrow"> <p class="label">Cover Amount</p><input class="inner-row2" type="text" name="amount" value="<%=r.coverAmount%>"></div>
        <div class="subrow"> <p class="label">Policy Term</p><input name="policyTerm" class="inner-row2" value="<%=r.term%>">
        </div>

    </div>

    <div class="row1">
        <p class="label">Duration</p>
        <input type="text" class="inner-row1" name="duration" value="<%=r.duration%>" >
    </div>
    <input value="<%=applier%>" name="applier" style="display: none"/>
    <input value="<%=r.type%>" name="policyType" style="display: none"/>
    <button class="button" type="submit">Submit</button>


</form>

<%-include('footer')%>