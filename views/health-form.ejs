<head>
    <link rel="stylesheet" href="/css/life-form.css">
</head>

<%- include('navbar.ejs')%>
<img class="car" src="/images/health-insurance.png">
<form class="form" action="/health-form" method="post" enctype="multipart/form-data">
    <div class="row1"><p class="label">Name</p> <input  name="firstName" type="text" class="row13" placeholder="First name">
        <input name="lastName" type="text" class="row13" placeholder="Last name"></div>


    <div class="row2">
        <div class="subrow"><p class="label">AADHAR</p> <input type="file" class="inner-row2" name="aadhar"></div>
        <div class="subrow"><p class="label">PAN</p> <input type="file" class="inner-row2" name="pan"></div>
    </div>
    <div class="row2">
        <div class="subrow"><p class="label">DOB Proof</p><input  name="dobProof" type="file" class="inner-row2"></div>
        <div class="subrow"><p class="label">Health Certificate</p><input type="file" name="healthCertificate" class="inner-row2"></div>

    </div>

    <div class="row1">
        <input class="health_" name="healthCondition" placeholder="Any health defects you have suffered previously or are suffering currently">
    </div>

    <div class="row1">
        <p class="label">Nominee Name</p>
        <input name="nominee" class="inner-row1">

    </div>

    <div class="row2">
        <div class="subrow">
            <p class="label">Nominee Age</p>
            <input class="inner-row2" name="nomineeAge">
        </div>
        <div class="subrow">
            <p class="label">Nominee Relation</p>
            <input class="inner-row2" name="nomineeRelation">
        </div>
    </div>

    <div class="row2">
        <div class="subrow"><p class="label">Nominee AADHAR</p> <input type="file" class="inner-row2" name="nomineeAadhar"></div>
        <div class="subrow"><p class="label">Nominee AddressProof</p> <input type="file" class="inner-row2" name="nomineeAddressProof"></div>
    </div>

    <div class="row1">
        <p class="label">Policy Number</p>
        <input class="inner-row1" name="policyNum">
    </div>

    <div class="row1">
        <p class="label">Policy Id</p>
        <input class="inner-row1" name="policyId" value="policy id">
    </div>

    <div class="row2">
        <div class="subrow"> <p class="label">Cover Amount</p><input class="inner-row2" type="number" name="amount" value="10000000"></div>
        <div class="subrow"> <p class="label">Type</p><select name="payType" class="inner-row2" value="Monthly">
                <option>Annually</option>
                <option>Monthly</option>
            </select></div>

    </div>

    <div class="row1">
        <p class="label">Duration</p>
        <input type="number" class="inner-row1" name="duration" >
    </div>
    <button class="button" type="submit">Submit</button>


</form>

<%-include('footer.ejs')%>